        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:padding="1dp"
        android:textAlignment="center"
        android:id="@+id/location5"
        />
  </TableRow>
</TableLayout>